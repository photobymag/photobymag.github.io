---
const { title, url, image, alt, description, pubDate, positionx, positiony } = Astro.props;
import { Image } from 'astro:assets';
const publishedDate = pubDate.toDateString().split(' ').slice(1).join(' ');
---

<div
  class="flex flex-col sm:flex-row md:space-x-14 md:mb-20 sm:mb-14 gap-8 sm:justify-center md:mx-24"
>
  {
    image && (
      <div class="flex sm:w-1/3 md:h-[480px] h-[360px] fade-image">
        <a href={url}>
          <Image
            src={image}
            alt={alt}
            inferSize
            width={1280}
            height={720}
            decoding="async"
            format="avif"
            loading="lazy"
            quality="65"
            class="h-full object-cover object-center post-image"
            style={`background-position: ${positionx} ${positiony};`}
          />
        </a>
      </div>
    )
  }
  <div id="description " class="sm:w-2/3 flex flex-col justify-start space-y-4 mb-6 md:mt-10">
    <ul class="flex-row">
      <h2 class="font-overpass-mono font-bold text-xl lg:text-2xl xl:text-4xl capitalize">
        {title}
      </h2>
      <p class="font-inconsolata text-sm">Published on {publishedDate}</p>
    </ul>
    <p class="font-inconsolata normal-case line-clamp-3 sm:text-base text-sm">
      {description}
    </p>
    <a href={url} class="dark:prose-invert max-w-max max-h-max flex flex-row flex-shrink-0">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 md:mt-10 mt-4 mb-4 bounce"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
        ></path>
      </svg>
    </a>
    <slot />
  </div>
</div>
<style>
  .post-image {
    background-position: var(--position-x, 45%) var(--position-y, 50%);
  }
  @media (min-width: 800px) {
    .post-image {
      background-position: var(--position-x, 30%) var(--position-y, 50%);
    }
  }
  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  a:hover svg {
    animation: bounce 2s infinite;
  }
  .fade-image {
    transition: opacity 0.5s ease-in-out;
    opacity: 1;
  }

  .fade-image:hover {
    opacity: 0.8;
  }
</style>
